<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cave.springbootdemo.example3.dao.mapper.UserMapper" >

    <select id="login" resultType="com.cave.springbootdemo.example3.pojo.User"
            parameterType="com.cave.springbootdemo.example3.pojo.User">
        SELECT * FROM s_user WHERE username = #{username} AND password = #{password}
    </select>

</mapper>